<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :sub_title %>
		<%= f.input :image, as: :file %>
    <%= f.input :description %>
		<p><strong>Ingredients</strong></p>
		<div id="items">
			<%= f.simple_fields_for :items do |item| %>
				<%= render 'item_fields', f: item %>
				<%= link_to_add_association "Add item", f, :items, 'data-association-insertion-method' => "after"  %>
			<% end %>
		</div>
    <%= f.input :source %>
    <%= f.input :url %>
    <%= f.input :book %>
    <%= f.input :page %>
    <%= f.input :net_carbs %>
    <%= f.input :rating %>
		<%= f.input :meal, as: :radio_buttons %>
    <%= f.association :shortlist %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
