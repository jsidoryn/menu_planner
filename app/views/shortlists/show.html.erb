<h2>Shortlist</h2
<p><%= link_to "Remove all recipes", remove_all_shortlist_path if @shortlist.recipes.present? %></p>

<div class="container">
	<% @recipes.each do |recipe|  %>
		<div class="card card--fixedWidth">
			<div class="card__image">
				<%= image_tag recipe.image.thumb('200x200#').url if recipe.image_stored? %>
			</div>
			<div class="card__title"><%= link_to  recipe.title, recipe %></div>
		</div>
	<% end %>
</div>
