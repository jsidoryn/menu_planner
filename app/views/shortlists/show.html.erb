<%- content_for :title, "Shortlist" -%>
<p><%= link_to "Remove all recipes", remove_all_shortlist_path if @shortlist.recipes.present? %></p>

<div class="clearfix">
	<% if @recipes.present? %>
		<% @recipes.each do |recipe| %>
			<%= render partial: "shared/recipe", object: recipe %>
		<% end %>
	<% else %>
		<p>No recipes on the shortlist</p>
	<% end %>
</div>
